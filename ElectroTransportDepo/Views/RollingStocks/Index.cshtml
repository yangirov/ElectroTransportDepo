@model IEnumerable<ElectroTransportDepo.Models.RollingStock>

@{
    ViewBag.Title = "Список подвижных составов";
}

<div>
    @Html.ActionLink("Добавить подвижной состав", "Create", null, new { @class = "btn btn-default" }) |
    @Html.ActionLink("На главную", "Index", "Home")
</div>

<table class="table">
    <thead>
        <tr>
            <td>Название</td>
            <td>Тип транспорта</td>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TransportType.Name)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
        </td>
    </tr>
    }
</table>