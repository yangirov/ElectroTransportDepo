@model ElectroTransportDepo.Models.Employee

@{
    ViewBag.Title = "Редактировать сотрудника";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        @Html.LabelFor(model => model.Name, new { @class = "control-label" })
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @autocomplete = "off" })
        @Html.ValidationMessageFor(model => model.Name)

        @Html.LabelFor(model => model.Birthday, new { @class = "control-label" })
        @Html.TextBoxFor(model => model.Birthday, new { @class = "form-control", @autocomplete = "off" })
        @Html.ValidationMessageFor(model => model.Birthday)

        @Html.LabelFor(model => model.Position, new { @class = "control-label" })
        @Html.DropDownListFor(model => model.PositionId, ViewBag.Positions as SelectList, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Position)

        @Html.LabelFor(model => model.Depo, new { @class = "control-label" })
        @Html.DropDownListFor(model => model.DepoId, ViewBag.Depos as SelectList, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Depo)
    </div>

    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" /> |
        @Html.ActionLink("Вернуться к списку", "Index")
    </div>
}